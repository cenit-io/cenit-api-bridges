<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>CenitIO eCommerce LTS: <%= params[:ns] %> Authorization</title>

  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" crossorigin="anonymous">

  <script type="text/javascript" src="//code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery-ujs/1.2.3/rails.min.js" crossorigin="anonymous"></script>
  <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" crossorigin="anonymous"></script>

  <%= render template: 'layouts/authorization_styles' %>

  <% if content_for? :head %>
    <%= yield :head %>
  <% end %>

</head>
<body>
<main class="side-collapse-container">
  <div class="header">
    <% if content_for? :breadcrumb %>
      <h3 class="breadcrumb"><%= yield :breadcrumb %></h3>
    <% end %>

    <% if content_for? :top_actions %>
      <div class="actions">
        <%= yield :top_actions %>
      </div>
    <% end %>

    <%= content_tag :hr if content_for?(:breadcrumb) || content_for?(:top_actions) %>
  </div>

  <% if content_for? :content %>
    <div class="page-content">
      <%= yield :content %>
    </div>
  <% end %>
</main>
</body>
</html>